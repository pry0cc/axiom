{
  "builders": [
    {
      "type": "digitalocean",
      "ssh_username": "root",
      "snapshot_name": "{{ user `snapshot_name` }}",
      "api_token": "{{ user `do_key` }}",
      "image": "ubuntu-20-04-x64",
      "region": "{{ user `region`  }}",
      "size": "s-1vcpu-1gb"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./configs",
      "destination":"/tmp/configs"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "echo 'Waiting for cloud-init to finish, this can take a few minutes please be patient...'",
        "/usr/bin/cloud-init status --wait",
        "fallocate -l 2G /swap && chmod 600 /swap && mkswap /swap && swapon /swap",
        "echo '/swap none swap sw 0 0' | sudo tee -a /etc/fstab",
        "add-apt-repository -y ppa:longsleep/golang-backports",
        "echo Apt-get update",
        "apt-get update -qq",
        "echo Apt-get upgrade",
        "DEBIAN_FRONTEND=noninteractive apt-get -o Dpkg::Options::=--force-confdef -o Dpkg::Options::=--force-confnew upgrade -qq",
        "echo Apt-get install all ma packages",
        "DEBIAN_FRONTEND=noninteractive UCF_FORCE_CONFFNEW=YES sudo apt-get -o Dpkg::Options::=--force-confdef -o Dpkg::Options::=--force-confnew -y --fix-missing install xvfb tor apt-transport-https ca-certificates debian-keyring p7zip zsh curl figlet zlib1g-dev python python3.7 default-jdk python3-pip python3-venv python3-dnspython pv libpcap-dev ruby ruby-dev nmap vim dirmngr gnupg-agent gnupg2 libpq-dev software-properties-common golang-go fonts-liberation libappindicator3-1 libcairo2 libgbm1 libgdk-pixbuf2.0-0 libgtk-3-0 libxss1 xdg-utils masscan zmap dirb jq ufw neovim ranger bat grc mosh net-tools",
        "snap install doctl",
        "ufw allow 22",
        "ufw allow 2266",
        "ufw allow 60000/udp",
        "ufw allow 60001/udp",
        "ufw allow 60002/udp",
        "ufw allow 60003/udp",
        "ufw allow 60004/udp",
        "ufw allow 60005/udp",
        "ufw allow 60006/udp",
        "ufw allow 60007/udp",
        "ufw allow 60008/udp",
        "ufw allow 60009/udp",
        "ufw allow 60010/udp",
        "curl -fsSL get.docker.com | sh",
        "UCF_FORCE_CONFFNEW=YES apt-get upgrade -qq",
        "apt-get -qq install docker-ce xvfb",
        "wget -O /tmp/chrome.deb https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && cd /tmp/ && dpkg -i /tmp/chrome.deb",
        "wget -O /tmp/findomain https://github.com/Edu4rdSHL/findomain/releases/latest/download/findomain-linux && mv /tmp/findomain /usr/bin/findomain && chmod +x /usr/bin/findomain",
        "wget -O /tmp/unimap https://github.com/Edu4rdSHL/unimap/releases/download/0.4.0/unimap-linux && mv /tmp/unimap /usr/bin/unimap && chmod +x /usr/bin/unimap",
        "cd /tmp && git clone https://github.com/EnableSecurity/wafw00f && cd wafw00f && sudo python3 setup.py install",
        "wget https://bootstrap.pypa.io/get-pip.py",
        "pip install docker-py",
        "gem install bundler wpscan nmap2json",
        "systemctl start docker",
        "systemctl enable tor",
        "systemctl disable systemd-resolved.service",
        "systemctl stop systemd-resolved.service",
        "ufw --force enable",
        "useradd -G sudo,docker -s /usr/bin/zsh -m op",
        "mkdir -p /home/op/.ssh /home/op/c2 /home/op/lists /home/op/bin /home/op/.config/ /home/op/work/ /home/op/.config/amass",
        "chown -R op:users /home/op",
        "echo 'op:{{ user `op_random_password` }}' | chpasswd",
        "echo 'root:{{ user `op_random_password` }}' | chpasswd",
        "rm /etc/resolv.conf",
        "rm -rf /etc/update-motd.d/*",
        "mv /tmp/configs/sshd_config /etc/ssh/sshd_config",
        "mv /tmp/configs/resolv.conf /etc/resolv.conf",
        "mv /tmp/configs/docker /etc/default/docker",
        "mv /tmp/configs/telegram /home/op/bin/telegram",
        "mv /tmp/configs/authorized_keys /home/op/.ssh/authorized_keys",
        "mv /tmp/configs/telegram.json /home/op/.telegram.json",
        "mv /tmp/configs/tmux.conf /home/op/.tmux.conf",
        "mv /tmp/configs/tmux.conf.local /home/op/.tmux.conf.local",
        "mv /tmp/configs/tmux-splash.sh /home/op/bin/tmux-splash.sh",
        "mv /tmp/configs/zsh_history /home/op/.zsh_history",
        "mv /tmp/configs/00-header /etc/update-motd.d/00-header",
        "mv /tmp/configs/bashrc /home/op/.bashrc",
        "mv /tmp/configs/zshrc /home/op/.zshrc",
        "mv /tmp/configs/sudoers /etc/sudoers",
        "mv /tmp/configs/config.ini /home/op/.config/amass/config.ini",
        "chmod 644 /etc/resolv.conf",
        "chattr +i /etc/resolv.conf",
        "chown -R op:users /home/op",
        "/bin/su -l op -c 'wget -q https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh -O - | sh'",
        "curl 'https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip' -o '/tmp/awscliv2.zip' && cd /tmp && unzip awscliv2.zip && sudo ./aws/install",
        "/bin/su -l op -c 'curl https://raw.githubusercontent.com/mitsuhiko/pipsi/master/get-pipsi.py | python3'",
        "sudo wget -O /usr/bin/gowitness https://github.com/sensepost/gowitness/releases/download/2.3.6/gowitness-2.3.6-linux-amd64 && sudo chmod +x /usr/bin/gowitness",
        "sudo wget https://raw.githubusercontent.com/xero/figlet-fonts/master/Bloody.flf -O /usr/share/figlet/Bloody.flf",
        "/bin/su -l op -c 'aws s3 sync s3://assetnote-wordlists/data/ ~/lists/assetnote --no-sign-request'",
        "/bin/su -l op -c 'git clone https://github.com/GerbenJavado/LinkFinder /home/op/recon/LinkFinder && cd /home/op/recon/LinkFinder && pip3 install -r requirements.txt && sudo python3 setup.py install'",
        "git clone https://github.com/commixproject/commix.git /home/op/recon/commix",
        "/bin/su -l op -c 'git clone https://github.com/UnaPibaGeek/ctfr.git /home/op/recon/ctfr && cd /home/op/recon/ctfr && pip3 install -r requirements.txt'",
        "/bin/su -l op -c 'git clone https://github.com/darkoperator/dnsrecon.git /home/op/recon/dnsrecon && cd /home/op/recon/dnsrecon && pip3 install -r requirements.txt'",
        "/bin/su -l op -c 'pip3 install s3scanner'",
        "/bin/su -l op -c 'pip3 install webscreenshot'",
        "/bin/su -l op -c 'git clone https://github.com/s0md3v/Corsy.git /home/op/recon/Corsy ; cd /home/op/recon/Corsy ; pip3 install -r requirements.txt'",
        "/bin/su -l op -c 'git clone https://github.com/devanshbatham/OpenRedireX.git /home/op/recon/OpenRedireX'",
        "git clone --depth 1 https://github.com/drwetter/testssl.sh.git /home/op/recon/testssl.sh",
        "git clone https://github.com/vortexau/dnsvalidator.git /home/op/recon/dnsvalidator && cd /home/op/recon/dnsvalidator/ && sudo python3 setup.py install",
        "git clone https://github.com/blechschmidt/massdns.git /tmp/massdns; cd /tmp/massdns; make; sudo mv bin/massdns /usr/bin/massdns",
        "git clone https://github.com/codingo/Interlace.git /home/op/recon/interlace && cd /home/op/recon/interlace/ && python3 setup.py install",
        "git clone https://github.com/1ndianl33t/Gf-Patterns /home/op/.gf",
        "echo 'Installing sqlmap'",
        "git clone --depth 1 https://github.com/sqlmapproject/sqlmap.git /home/op/recon/sqlmap-dev",
        "git clone https://github.com/projectdiscovery/nuclei-templates /home/op/recon/nuclei",
        "echo 'Installing Nuclei'",
        "/bin/su -l op -c 'go install github.com/projectdiscovery/nuclei/v2/cmd/nuclei@latest'",
        "wget -O /home/op/lists/jhaddix-all.txt https://gist.githubusercontent.com/jhaddix/86a06c5dc309d08580a018c66354a056/raw/96f4e51d96b2203f19f6381c8c545b278eaa0837/all.txt",
        "wget -O /home/op/lists/permutations.txt https://gist.github.com/six2dez/ffc2b14d283e8f8eff6ac83e20a3c4b4/raw",
        "wget -O /home/op/lists/fuzz_wordlist.txt https://raw.githubusercontent.com/six2dez/OneListForAll/main/onelistforallmicro.txt",
        "echo 'Installing fail2ban'",
        "apt-get -y install fail2ban",
        "echo 'Installing Neovim Plugin manager'",
        "/bin/su -l op -c 'curl --create-dirs -fLo ~/.local/share/nvim/site/autoload/plug.vim https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'",
        "echo 'Installing ffuf'",
        "/bin/su -l op -c 'go install github.com/ffuf/ffuf@latest'",
        "echo 'Installing cf-check'",
        "/bin/su -l op -c 'go install github.com/dwisiswant0/cf-check@latest'",
        "echo 'Installing Gxss'",
        "/bin/su -l op -c 'go install github.com/KathanP19/Gxss@latest'",
        "echo 'Installing Crobat'",
        "/bin/su -l op -c 'go install github.com/cgboal/sonarsearch/crobat@latest'",
        "echo 'Installing waybackurls'",
        "/bin/su -l op -c 'go install github.com/tomnomnom/waybackurls@latest'",
        "echo 'Installing httpx'",
        "/bin/su -l op -c 'go install github.com/projectdiscovery/httpx/cmd/httpx@latest'",
        "echo 'Installing anew'",
        "/bin/su -l op -c 'go install github.com/tomnomnom/anew@latest'",
        "echo 'Installing getJS'",
        "/bin/su -l op -c 'go install github.com/003random/getJS@latest'",
        "echo 'Installing gau'",
        "/bin/su -l op -c 'go install github.com/lc/gau@latest'",
        "echo 'Installing dnsx'",
        "/bin/su -l op -c 'go install github.com/projectdiscovery/dnsx/cmd/dnsx@latest'",
        "echo 'Installing interactsh client'",
        "/bin/su -l op -c 'go install github.com/projectdiscovery/interactsh/cmd/interactsh-client@latest'",
        "echo 'Installing unfurl'",
        "/bin/su -l op -c 'go install github.com/tomnomnom/unfurl@latest'",
        "echo 'Installing qsreplace'",
        "/bin/su -l op -c 'go install github.com/tomnomnom/qsreplace@latest'",
        "echo 'Installing Subfinder'",
        "/bin/su -l op -c 'go install github.com/projectdiscovery/subfinder/v2/cmd/subfinder@latest'",
        "echo 'Installing github-subdomains'",
        "/bin/su -l op -c 'go install github.com/gwen001/github-subdomains@latest'",
        "echo 'Installing github-endpoints'",
        "/bin/su -l op -c 'go install github.com/gwen001/github-endpoints@latest'",
        "echo 'Installing subjs'",
        "/bin/su -l op -c 'go install github.com/lc/subjs@latest'",
        "echo 'Installing amass'",
        "wget -O /tmp/amass.zip https://github.com/OWASP/Amass/releases/download/v3.15.2/amass_linux_amd64.zip && cd /tmp/ && unzip /tmp/amass.zip && mv /tmp/amass_linux_amd64/amass /usr/bin/amass",
        "echo 'Installing dalfox'",
        "/bin/su -l op -c 'go install github.com/hahwul/dalfox/v2@latest'",
        "echo 'Installing gospider'",
        "/bin/su -l op -c 'go install github.com/jaeles-project/gospider@latest'",
        "echo 'Installing assetfinder'",
        "/bin/su -l op -c 'go install github.com/tomnomnom/assetfinder@latest'",
        "echo 'Installing puredns'",
        "/bin/su -l op -c 'go install github.com/d3mondev/puredns/v2@latest'",
        "echo 'Installing crlfuzz'",
        "/bin/su -l op -c 'go install github.com/dwisiswant0/crlfuzz/cmd/crlfuzz@latest'",
        "echo 'Setting SSH Alive Internal'",
        "/bin/su -l root -c 'echo \"ClientAliveInterval 60\" | sudo tee -a /etc/ssh/sshd_config'",
        "/bin/su -l root -c 'echo \"ClientAliveCountMax 60\" | sudo tee -a /etc/ssh/sshd_config'",
        "/bin/su -l root -c 'echo \"MaxSessions 100\" | sudo tee -a /etc/ssh/sshd_config'",
        "/bin/su -l root -c 'echo \"net.ipv4.netfilter.ip_conntrack_max = 1048576\" | sudo tee -a /etc/sysctl.conf'",
        "/bin/su -l root -c 'echo \"net.nf_conntrack_max = 1048576\" | sudo tee -a /etc/sysctl.conf'",
        "/bin/su -l root -c 'echo \"net.core.somaxconn = 1048576\" | sudo tee -a /etc/sysctl.conf'",
        "/bin/su -l root -c 'echo \"net.ipv4.ip_local_port_range = 1024 65535\" | sudo tee -a /etc/sysctl.conf'",
        "/bin/su -l root -c 'echo \"1024 65535\" | sudo tee -a /proc/sys/net/ipv4/ip_local_port_range'",
        "/bin/su -l op -c 'go clean -modcache'",
        "/bin/su -l root -c 'rm -r /home/op/go/src/'",
        "/bin/su -l root -c 'apt-get clean'",
        "echo 'Installing gf'",
        "/bin/su -l op -c 'go install github.com/tomnomnom/gf@latest'",
        "echo \"The password for user op is: {{ user `op_random_password` }}\"",
        "echo \"\" | base64 -d",
        "touch /home/op/.profile",
        "touch /home/op/.z",
        "chown -R op:users /home/op",
        "chmod +x /etc/update-motd.d/00-header",
        "chown root:root /etc/sudoers /etc/sudoers.d -R"
      ], "inline_shebang": "/bin/sh -x",
	  "type": "shell"
    }
  ]
}
