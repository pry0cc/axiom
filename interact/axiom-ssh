#!/bin/bash

use_tmux=false
use_mosh=false
connected=false

for var in "$@"
do
    if [ $var == "--tmux" ]
    then
        use_tmux=true
    elif [  $var == "--mosh" ]
	then
		use_mosh=true
	fi
done

instance=""

if [ -z "$1" ] || [ "$1" == "--tmux" ] || [ "$1" == "--mosh" ]
then
    instance=$(doctl compute droplet list | awk '{ print $2 }' | grep -v "Name" | fzf)
else
	instance="$1"
fi

ip=$(doctl compute droplet list | grep "$instance" | awk '{ print $3 }')

if [ $use_tmux == true ]
then
	connected=true
	ssh -p2266 op@$ip -t 'tmux new-session -t main'
fi

if [ $use_mosh == true ]
then
	connected=true
	mosh --ssh='ssh -p2266' op@$ip
fi

if [ $connected == false ]
then
	ssh -p2266 op@$ip
fi

$HOME/.axiom/interact/header.sh
