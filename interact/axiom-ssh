#!/bin/bash

AXIOM_PATH="$HOME/.axiom"
source "$AXIOM_PATH/interact/includes/vars.sh"
source "$AXIOM_PATH/interact/includes/functions.sh"
ssh_config="$AXIOM_PATH/.sshconfig"

use_tmux=false
use_mosh=false
tmux_session="main"
connected=false
cache=false
just_generate=false

args="-F $ssh_config"

for var in "$@"
do
    if [ $var == "--tmux" ]
    then
        use_tmux=true
    elif [[ $var =~ "-t=" ]]
    then
		tmux_session="$(echo "$var" | sed 's/=/ /g' | awk '{ print $2 }')"
    elif [ $var == "--cache" ]
	then
		cache=true
	elif [ $var == "--just-generate" ]
	then
		just_generate=true
	elif [ $var == "-m" ]
	then
		use_mosh=true
	else
		args="$args $var"
	fi
done

if [ $cache != true ]
then
	generate_sshconfig
fi

if [ $use_tmux == true ]
then
	args="$args -t 'tmux new-session -t $tmux_session'"
fi

if [ $use_mosh == true ]
then
	new_args=""

	for i in $args
	do
		if [[ "$i" != "$1" ]] && [[ ! "$i" =~ "-t=" ]]
		then
			new_args="$new_args $i"
		fi
	done
	cmd="mosh --ssh='ssh $new_args' $1 -- tmux attach -t $tmux_session -d"

	echo $cmd
else
	cmd="ssh $args"
fi

if [ $just_generate == "false" ]
then
	bash -c "$cmd"
fi
"$AXIOM_PATH/interact/header.sh"
