#!/usr/bin/env bash

AXIOM_PATH="$HOME/.axiom"
source "$AXIOM_PATH/interact/includes/vars.sh"
source "$AXIOM_PATH/interact/includes/functions.sh"

output="${Red}No instance supplied, use '\*' if you want to delete all instances, add -f not to be prompted...${Color_Off}"

if [ -z "$1" ]
then
	echo -e "$output"
    exit
fi

force="false"
query=""
droplets="$(instances)"
selected=""

for var in "$@"; do
	if [ "$var" == "-f" ]; then
		force=true
	else
		query="$query $var"
	fi
done

selected=$(query_instances $query)

if [[ "$selected" ]]
then
	for instance in $selected
	do
	    echo -e "${Red}Deleting '$instance'...${Color_Off}"
		delete_instance "$instance" "$force"
	done
else    
        >&2 echo -e "$output"
	exit
fi

