#!/usr/bin/env bash

AXIOM_PATH="$HOME/.axiom"
source "$AXIOM_PATH/interact/includes/vars.sh"

if [ -z $1 ]; then
	data=$(doctl compute droplet list -o json)
	i=0
	for f in $(echo $data | jq -r '.[].size.price_monthly'); do new=$(expr $i +  $f); i=$new; done
	(echo "Instance,IP,Memory,\$/M" && echo $data | jq  -r '.[] | [.name, .networks.v4[].ip_address, .size_slug, .size.price_monthly] | @csv' && echo "_,_,Total,\$$i") | sed 's/"//g' | column -t -s,
else
	if [[ "$1" == "-d" ]]; then
		(echo "Instance,IP,Memory" && doctl compute droplet list -o json  | jq  -r '.[] | [.name, .networks.v4[].ip_address, .memory] | @csv') | sed 's/"//g' | column -t -s,
	elif [[ "$1" == "--json" ]]; then
		doctl compute droplet list -o json | jq
	else
		resp=$(doctl compute droplet list | awk '{ print $2 }' | grep -v "Name" | grep -E "$1")
		count=$(echo $resp | tr ' ' '\n' | wc -l | awk '{ print $1 }')

		if [[ "$count" -gt 1 ]]; then
			i=1
			for name in $resp; do
				echo "$i:$name"
				i=$((i + 1))
			done
		else
			doctl compute droplet list | grep -E $1 | awk '{ print $3 }'
		fi
	fi
fi

$AXIOM_PATH/interact/header.sh
